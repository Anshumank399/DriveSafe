<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.anshuman.drivesafe.stats">

        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="368dp"
            android:layout_height="240dp"
            android:id="@+id/idPieChart"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"></com.github.mikephil.charting.charts.PieChart>

        <TextView
            android:id="@+id/odo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="Odometer Reading :2400Km"
            android:paddingLeft="14dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/idPieChart"
            android:layout_alignParentStart="true"
            android:layout_marginTop="27dp" />
        <TextView
            android:id="@+id/speed"
            android:layout_below="@+id/odo"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average Speed        :38.60Km/Hr"
            android:textColor="#ffffff"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/milage"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_below="@+id/speed"
            android:paddingLeft="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Milage                      :12.20Km/L"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

</RelativeLayout>
